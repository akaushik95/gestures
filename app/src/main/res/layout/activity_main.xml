<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Long Press for SS/Recording!"
        android:textColor="#ce3232"/>
    <TextView
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Double Press for Reporting the Bug!"
        android:textColor="#ce3232"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btn_goToM2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Go To M2"
        android:background="@color/light_black"
        android:layout_margin="0dp" />

    <Button
        android:id="@+id/btn_fetchHistoryofApi"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="fetch history of API"/>

    <ListView
        android:id="@+id/listview_history_of_api"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
